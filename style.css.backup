ul {
	list-style-type: none;
}

a {
	text-decoration: none;
	color:black;
}

.social img:hover{
	filter: opacity(0.55);
	animation-name:move;
}

:root {
	--color_back: #DDDDDD;
	--color_one: #999999;
	--color_two: #AAAAAA;
	--margin_small: 15px;
	--margin_big: 50px;
	font-family: Verdana;
}

h1 {
	font-size: 55px;
	text-shadow: 0 0 1px #000000;
	text-align: center;
}

h2 {
	font-size:40px;
	color:#DDDDDD;
}

h3 {
	font-size:30px;
	color:black;
}

body { 
	background-color: var(--color_back);
	margin: var(--margin_big) auto auto auto;
	width: 85%;
}

#header {
	background-color: var(--color_one);
	height: 100px;
	padding: 50px;
	z-index: 0;
	border-bottom: solid 1px #CCCCCC;
	border-right: solid 1px #CCCCCC;

}

#logo {
	width: 17%;
	background-color: var(--color_two);
	z-index: 2;
	float: left;
	margin-top:-5%;
	padding: 10px 20px;
}

#logo img {
	width: 100%;
}

footer 
{
	padding: 2px 2px;
	text-align: center;
	background-color: var(--color_one);
	max-height: 50px;
	position: relative;
	clear: both;
}

#socialMedia {
	width: 100%;
	background-color: var(--color_one);
	position: relative;
	z-index: 1;
}

nav {
	width:100%;
	background-color: var(--color_one);
	margin: 0 var(--margin_small) var(--margin_small) 0;
	padding: 5px 0 5px 0;
	z-index: 1;
}

nav li {
	padding: 10px 0 10px 0;
	width: 100%;
	margin: auto auto 10px -20px;
	text-align: center;
}

nav li:hover {
	background-color: #424242;
	color: var(--color_two);
	font-size:18px;
	animation-name: move;
	animation-duration: 0.5s;
	animation-iteration-count: infinite;
	animation-direction: alternate;
	animation-timing-function: ease;
}

nav li:active {
	background-color: var(--color_two);
	color: white;
}

nav li:visited {
	background-color: #FFFFFF;
	color: red;
}

.content {
	background-color: var(--color_one);
	text-align: center;
	width: 100%;
	padding-top:1px;
	padding-left:10px;
	padding-right:10px;
	padding-bottom:10px;
	margin-bottom: var(--margin_small);
}

@keyframes move {
	 from {padding: 10px 0 10px 0;}
	 to {padding: 15px 5px 15px 5px; margin-left:-25px;}
}


@media screen and (max-width:1300px) /* Small scaled */
{
	body {
		background-color: white;
	}
	
	#logo {
		width: 200px;
		margin-top:-1%;
	}
}